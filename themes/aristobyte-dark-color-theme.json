{
  "$schema": "vscode://schemas/color-theme",
  "name": "AristoByte Dark",
  "type": "dark",
  "colors": {
    "tab.activeBackground": "#1A1F35",
    "tab.activeForeground": "#FFFFFF",
    "tab.inactiveBackground": "#0E1220",
    "tab.inactiveForeground": "#6B6F85",
    "tab.hoverBackground": "#1E243C",
    "tab.border": "#1E243C",
    "tab.activeBorderTop": "#FFCB6B",
    "tab.lastPinnedBorder": "#1B2034",
    "titleBar.activeBackground": "#0E1220",
    "titleBar.inactiveBackground": "#121626",
    "titleBar.activeForeground": "#E6E6F0",
    "titleBar.inactiveForeground": "#6B6F85",
    "editorGroupHeader.tabsBackground": "#0E1220",
    "editorGroupHeader.tabsBorder": "#1E243C",
    "editor.background": "#121626",
    "editor.foreground": "#E6E6F0",
    "editorLineNumber.foreground": "#4B5373",
    "editorLineNumber.activeForeground": "#FFCB6B",
    "editorCursor.foreground": "#FFCB6B",
    "editor.selectionBackground": "#3C4272A0",
    "editor.inactiveSelectionBackground": "#2A2E42A0",
    "editor.lineHighlightBackground": "#1E2239A0",
    "editorIndentGuide.background1": "#2A2E42",
    "editorIndentGuide.activeBackground1": "#3C4272",
    "editorGutter.background": "#0E1220",
    "editorWhitespace.foreground": "#2A2E42",
    "editorBracketMatch.background": "#2A2E42",
    "editorBracketMatch.border": "#3C4272",
    "sideBar.background": "#141A2E",
    "sideBar.foreground": "#C5C8E0",
    "sideBar.border": "#1B2034",
    "activityBar.background": "#0E1220",
    "activityBar.foreground": "#E6E6F0",
    "activityBarBadge.background": "#FFCB6B",
    "activityBarBadge.foreground": "#121626",
    "statusBar.background": "#0E1220",
    "statusBar.foreground": "#C5C8E0",
    "statusBar.debuggingBackground": "#FF9E64",
    "statusBar.debuggingForeground": "#121626",
    "panel.background": "#121626",
    "panel.border": "#1B2034",
    "terminal.background": "#121626",
    "terminal.foreground": "#E6E6F0",
    "terminalCursor.foreground": "#FFCB6B",
    "terminal.ansiBlack": "#1C1F30",
    "terminal.ansiRed": "#E06C75",
    "terminal.ansiGreen": "#98C379",
    "terminal.ansiYellow": "#E5C07B",
    "terminal.ansiBlue": "#61AFEF",
    "terminal.ansiMagenta": "#C678DD",
    "terminal.ansiCyan": "#56B6C2",
    "terminal.ansiWhite": "#ABB2BF",
    "terminal.ansiBrightBlack": "#5C6370",
    "terminal.ansiBrightRed": "#E06C75",
    "terminal.ansiBrightGreen": "#98C379",
    "terminal.ansiBrightYellow": "#D19A66",
    "terminal.ansiBrightBlue": "#61AFEF",
    "terminal.ansiBrightMagenta": "#C678DD",
    "terminal.ansiBrightCyan": "#56B6C2",
    "terminal.ansiBrightWhite": "#E6E6F0",

    // ─────────── Search UI Enhancements ───────────
    "editor.findMatchBackground": "#3C427280",
    "editor.findMatchBorder": "#FFCB6B60",
    "editor.findMatchHighlightBackground": "#2A2E4280",
    "editor.findRangeHighlightBackground": "#1E223950",

    "editorWidget.background": "#0E1220",
    "editorWidget.border": "#1E243C",
    "editorWidget.foreground": "#E6E6F0",

    "editorWidget.resizeBorder": "#FFCB6B",
    "editorWidget.shadow": "#00000070",

    "input.background": "#0E1220",
    "input.border": "#1E243C",
    "input.foreground": "#E6E6F0",
    "input.placeholderForeground": "#6B6F85",
    "inputOption.activeBorder": "#FFCB6B",
    "inputOption.activeBackground": "#1A1F35",
    "inputOption.activeForeground": "#FFFFFF",

    "dropdown.background": "#0E1220",
    "dropdown.border": "#1E243C",
    "dropdown.foreground": "#E6E6F0",

    "list.highlightForeground": "#FFCB6B",
    "list.focusBackground": "#1A1F35",
    "list.focusForeground": "#FFFFFF",
    "list.hoverBackground": "#1E243C",
    "list.hoverForeground": "#E6E6F0",

    "searchEditor.findMatchBackground": "#3C427280",
    "searchEditor.findMatchBorder": "#FFCB6B60",
    "searchEditor.textMatchHighlight": "#3C427260"
  },
  "tokenColors": [
    {
      "scope": ["comment", "punctuation.definition.comment"],
      "settings": {
        "foreground": "#5C6370",
        "fontStyle": "italic"
      }
    },
    {
      "scope": ["keyword", "storage.type", "storage.modifier"],
      "settings": {
        "foreground": "#C792EA"
      }
    },
    {
      "scope": ["entity.name.type", "support.class", "support.type"],
      "settings": {
        "foreground": "#82AAFF"
      }
    },
    {
      "scope": [
        "variable",
        "meta.definition.variable.name",
        "meta.object-literal.key"
      ],
      "settings": {
        "foreground": "#E6E6F0"
      }
    },
    {
      "scope": ["variable.parameter"],
      "settings": {
        "foreground": "#DCDCDC"
      }
    },
    {
      "scope": [
        "string",
        "constant.other.symbol",
        "entity.other.inherited-class"
      ],
      "settings": {
        "foreground": "#ECC48D"
      }
    },
    {
      "scope": ["constant.numeric", "constant.language.boolean"],
      "settings": {
        "foreground": "#E06C75"
      }
    },
    {
      "scope": ["constant", "variable.other.constant"],
      "settings": {
        "foreground": "#F78C6C"
      }
    },
    {
      "scope": [
        "entity.name.function",
        "support.function",
        "meta.function-call",
        "variable.function"
      ],
      "settings": {
        "foreground": "#FFCB6B"
      }
    },
    {
      "scope": [
        "punctuation",
        "meta.brace",
        "meta.delimiter",
        "meta.brace.square",
        "meta.brace.round"
      ],
      "settings": {
        "foreground": "#8F93A2"
      }
    },
    {
      "scope": [
        "entity.name.tag",
        "meta.tag",
        "support.constant.property-value.css"
      ],
      "settings": {
        "foreground": "#FF9E64"
      }
    },
    {
      "scope": ["entity.other.attribute-name", "meta.attribute"],
      "settings": {
        "foreground": "#FFB86C"
      }
    },
    {
      "scope": [
        "meta.import",
        "keyword.control.import",
        "keyword.control.export"
      ],
      "settings": {
        "foreground": "#C792EA"
      }
    },
    {
      "scope": [
        "support.constant.color",
        "constant.other.color.rgb-value",
        "constant.other.rgb-value"
      ],
      "settings": {
        "foreground": "#FF9E64"
      }
    },
    {
      "scope": ["source.css", "source.scss", "source.sass"],
      "settings": {
        "foreground": "#E6E6F0"
      }
    },
    {
      "scope": [
        "variable.parameter.url",
        "variable.parameter.unit",
        "keyword.other.unit"
      ],
      "settings": {
        "foreground": "#82AAFF"
      }
    },
    {
      "scope": ["markup.heading", "markup.bold"],
      "settings": {
        "foreground": "#FFCB6B",
        "fontStyle": "bold"
      }
    },
    {
      "scope": ["markup.italic"],
      "settings": {
        "foreground": "#C792EA",
        "fontStyle": "italic"
      }
    },
    {
      "scope": ["markup.inline.raw"],
      "settings": {
        "foreground": "#82AAFF"
      }
    },
    {
      "scope": ["meta.object-literal.key", "support.type.property-name"],
      "settings": {
        "foreground": "#9CDCFE"
      }
    },
    {
      "scope": [
        "source.json meta.structure.dictionary.json support.type.property-name.json"
      ],
      "settings": {
        "foreground": "#82AAFF" // JSON keys
      }
    },
    {
      "scope": [
        "source.json meta.structure.dictionary.json constant.language.json",
        "source.json meta.structure.dictionary.json string.quoted.double.json"
      ],
      "settings": {
        "foreground": "#F78C6C" // JSON values
      }
    },
    {
      "scope": ["source.yaml entity.name.tag", "source.toml key.unquoted"],
      "settings": {
        "foreground": "#82AAFF" // Config keys
      }
    },
    {
      "scope": ["source.yaml string.unquoted", "source.toml string.quoted"],
      "settings": {
        "foreground": "#F78C6C" // Config values
      }
    },
    {
      "scope": ["invalid", "invalid.illegal"],
      "settings": {
        "foreground": "#FFFFFF",
        "background": "#E06C75"
      }
    }
  ]
}
