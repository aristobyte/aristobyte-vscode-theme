{
  "$schema": "vscode://schemas/color-theme",
  "name": "AristoByte Light",
  "type": "light",
  "colors": {
    "tab.activeBackground": "#F5F6FA",
    "tab.activeForeground": "#1A1F35",
    "tab.inactiveBackground": "#EDEEF4",
    "tab.inactiveForeground": "#6B6F85",
    "tab.hoverBackground": "#E0E2EB",
    "tab.border": "#D0D3E0",
    "tab.activeBorderTop": "#FFCB6B",
    "tab.lastPinnedBorder": "#D8DAE2",
    "titleBar.activeBackground": "#F5F6FA",
    "titleBar.inactiveBackground": "#ECEFF4",
    "titleBar.activeForeground": "#1A1F35",
    "titleBar.inactiveForeground": "#6B6F85",
    "editorGroupHeader.tabsBackground": "#F5F6FA",
    "editorGroupHeader.tabsBorder": "#D0D3E0",
    "editor.background": "#FFFFFF",
    "editor.foreground": "#1A1F35",
    "editorLineNumber.foreground": "#9A9EB2",
    "editorLineNumber.activeForeground": "#FFCB6B",
    "editorCursor.foreground": "#FFCB6B",
    "editor.selectionBackground": "#FFDFA030",
    "editor.inactiveSelectionBackground": "#EAEAF0A0",
    "editor.lineHighlightBackground": "#F0F0F5",
    "editorIndentGuide.background1": "#EAEAF0",
    "editorIndentGuide.activeBackground1": "#DADAE8",
    "editorGutter.background": "#FFFFFF",
    "editorWhitespace.foreground": "#E0E2EB",
    "editorBracketMatch.background": "#E0E2EB",
    "editorBracketMatch.border": "#C0C4D2",
    "sideBar.background": "#F5F6FA",
    "sideBar.foreground": "#1A1F35",
    "sideBar.border": "#D0D3E0",
    "activityBar.background": "#F5F6FA",
    "activityBar.foreground": "#1A1F35",
    "activityBarBadge.background": "#FFCB6B",
    "activityBarBadge.foreground": "#FFFFFF",
    "statusBar.background": "#F5F6FA",
    "statusBar.foreground": "#1A1F35",
    "statusBar.debuggingBackground": "#FF9E64",
    "statusBar.debuggingForeground": "#FFFFFF",
    "panel.background": "#FFFFFF",
    "panel.border": "#D0D3E0",
    "terminal.background": "#FFFFFF",
    "terminal.foreground": "#1A1F35",
    "terminalCursor.foreground": "#FFCB6B",
    "terminal.ansiBlack": "#E0E0E0",
    "terminal.ansiRed": "#E06C75",
    "terminal.ansiGreen": "#98C379",
    "terminal.ansiYellow": "#E5C07B",
    "terminal.ansiBlue": "#61AFEF",
    "terminal.ansiMagenta": "#C678DD",
    "terminal.ansiCyan": "#56B6C2",
    "terminal.ansiWhite": "#4B5373",
    "terminal.ansiBrightBlack": "#9A9EB2",
    "terminal.ansiBrightRed": "#E06C75",
    "terminal.ansiBrightGreen": "#98C379",
    "terminal.ansiBrightYellow": "#D19A66",
    "terminal.ansiBrightBlue": "#61AFEF",
    "terminal.ansiBrightMagenta": "#C678DD",
    "terminal.ansiBrightCyan": "#56B6C2",
    "terminal.ansiBrightWhite": "#1A1F35",

    // ─────────── Search UI Enhancements ───────────
    "editor.findMatchBackground": "#FFDFA030",
    "editor.findMatchBorder": "#FFCB6B60",
    "editor.findMatchHighlightBackground": "#EAEAF030",
    "editor.findRangeHighlightBackground": "#F0F0F550",

    "editorWidget.background": "#F5F6FA",
    "editorWidget.border": "#D0D3E0",
    "editorWidget.foreground": "#1A1F35",
    "editorWidget.resizeBorder": "#FFCB6B",
    "editorWidget.shadow": "#00000030",

    "input.background": "#FFFFFF",
    "input.border": "#D0D3E0",
    "input.foreground": "#1A1F35",
    "input.placeholderForeground": "#6B6F85",
    "inputOption.activeBorder": "#FFCB6B",
    "inputOption.activeBackground": "#F0F0F5",
    "inputOption.activeForeground": "#1A1F35",

    "dropdown.background": "#FFFFFF",
    "dropdown.border": "#D0D3E0",
    "dropdown.foreground": "#1A1F35",

    "list.highlightForeground": "#FFCB6B",
    "list.focusBackground": "#F0F0F5",
    "list.focusForeground": "#1A1F35",
    "list.hoverBackground": "#EAEAF0",
    "list.hoverForeground": "#1A1F35",

    "searchEditor.findMatchBackground": "#FFDFA030",
    "searchEditor.findMatchBorder": "#FFCB6B60",
    "searchEditor.textMatchHighlight": "#EAEAF030"
  },
  "tokenColors": [
    {
      "scope": ["comment", "punctuation.definition.comment"],
      "settings": {
        "foreground": "#7A7E92",
        "fontStyle": "italic"
      }
    },
    {
      "scope": ["keyword", "storage.type", "storage.modifier"],
      "settings": {
        "foreground": "#9B59B6"
      }
    },
    {
      "scope": ["entity.name.type", "support.class", "support.type"],
      "settings": {
        "foreground": "#4078F2"
      }
    },
    {
      "scope": [
        "variable",
        "meta.definition.variable.name",
        "meta.object-literal.key"
      ],
      "settings": {
        "foreground": "#1A1F35"
      }
    },
    {
      "scope": ["variable.parameter"],
      "settings": {
        "foreground": "#2E2E3A"
      }
    },
    {
      "scope": [
        "string",
        "constant.other.symbol",
        "entity.other.inherited-class"
      ],
      "settings": {
        "foreground": "#E29D5D"
      }
    },
    {
      "scope": ["constant.numeric", "constant.language.boolean"],
      "settings": {
        "foreground": "#C94C4C"
      }
    },
    {
      "scope": ["constant", "variable.other.constant"],
      "settings": {
        "foreground": "#E67E50"
      }
    },
    {
      "scope": [
        "entity.name.function",
        "support.function",
        "meta.function-call",
        "variable.function"
      ],
      "settings": {
        "foreground": "#FFCB6B"
      }
    },
    {
      "scope": [
        "punctuation",
        "meta.brace",
        "meta.delimiter",
        "meta.brace.square",
        "meta.brace.round"
      ],
      "settings": {
        "foreground": "#8F93A2"
      }
    },
    {
      "scope": [
        "entity.name.tag",
        "meta.tag",
        "support.constant.property-value.css"
      ],
      "settings": {
        "foreground": "#FF9E64"
      }
    },
    {
      "scope": ["entity.other.attribute-name", "meta.attribute"],
      "settings": {
        "foreground": "#FFB86C"
      }
    },
    {
      "scope": [
        "meta.import",
        "keyword.control.import",
        "keyword.control.export"
      ],
      "settings": {
        "foreground": "#9B59B6"
      }
    },
    {
      "scope": [
        "support.constant.color",
        "constant.other.color.rgb-value",
        "constant.other.rgb-value"
      ],
      "settings": {
        "foreground": "#FF9E64"
      }
    },
    {
      "scope": ["source.css", "source.scss", "source.sass"],
      "settings": {
        "foreground": "#1A1F35"
      }
    },
    {
      "scope": [
        "variable.parameter.url",
        "variable.parameter.unit",
        "keyword.other.unit"
      ],
      "settings": {
        "foreground": "#4078F2"
      }
    },
    {
      "scope": ["markup.heading", "markup.bold"],
      "settings": {
        "foreground": "#FFCB6B",
        "fontStyle": "bold"
      }
    },
    {
      "scope": ["markup.italic"],
      "settings": {
        "foreground": "#9B59B6",
        "fontStyle": "italic"
      }
    },
    {
      "scope": ["markup.inline.raw"],
      "settings": {
        "foreground": "#4078F2"
      }
    },
    {
      "scope": ["meta.object-literal.key", "support.type.property-name"],
      "settings": {
        "foreground": "#5C6BC0"
      }
    },
    {
      "scope": [
        "source.json meta.structure.dictionary.json support.type.property-name.json"
      ],
      "settings": {
        "foreground": "#4078F2"
      }
    },
    {
      "scope": [
        "source.json meta.structure.dictionary.json constant.language.json",
        "source.json meta.structure.dictionary.json string.quoted.double.json"
      ],
      "settings": {
        "foreground": "#E67E50"
      }
    },
    {
      "scope": ["source.yaml entity.name.tag", "source.toml key.unquoted"],
      "settings": {
        "foreground": "#4078F2"
      }
    },
    {
      "scope": ["source.yaml string.unquoted", "source.toml string.quoted"],
      "settings": {
        "foreground": "#E67E50"
      }
    },
    {
      "scope": ["invalid", "invalid.illegal"],
      "settings": {
        "foreground": "#FFFFFF",
        "background": "#C94C4C"
      }
    }
  ]
}
